<% layout("layout/boilerplate") %>
<link rel="stylesheet" href="/css/show.css">

<%- include("../includes/logo.ejs") %>

<div class="listing-container">
    <!-- Icon at the top -->
    <% if(listing.icon_url) { %>
        <div class="listing-icon">
            <img src="<%= listing.icon_url %>" alt="Icon">
        </div>
    <% } %>

    <!-- Listing Title -->
    <h1 class="listing-title"><%= listing.title %></h1>

    <!-- Listing Details -->
<ul class="listing-details">
    <li><strong>Category:</strong> <%= listing.category %></li>
    <li><strong>Description:</strong> <%= listing.description %></li>

    <li><strong>Tools Needed:</strong>
        <div class="tool-container">
            <% listing.tools_needed.forEach(function(tool) { %>
                <div class="tool-item"><%= tool %></div>
            <% }); %>
        </div>
    </li>
    <li><strong>Tags:</strong>
        <div class="tag-container">
            <% listing.tags.forEach(function(tag) { %>
                <div class="tag"><%= tag %></div>
            <% }); %>
        </div>
    </li>

<li><strong>Mood Benefit:</strong>
    <div class="mood-container">
        <% listing.mood_benefit.forEach(function(benefit) { %>
            <div class="mood-badge"><%= benefit %></div>
        <% }); %>
    </div>
</li>



</ul>



</div>
