<% layout("layout/boilerplate") %>
<body>

    <!-- Hero Section -->
    <div class="hero_sec">
        <h1>Caught Scrolling Again?</h1>
        <h2>We've got something better for your brain</h2>
        <p>Choose from our menu of mood-boosting activities designed to give you genuine satisfaction.</p>
        <p>Because life's too short for empty content.</p>
        <p>Start your dopamine menu journey today.</p>

        <!-- Features Grid -->
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">âš¡</div>
                <div class="feature-content">
                    <h3>5-Minute Boost</h3>
                    <p>Quick dopamine activities</p>
                </div>
            </div>

            <div class="feature-card">
                <div class="feature-icon">ðŸŽ¯</div>
                <div class="feature-content">
                    <h3>Real Results</h3>
                    <p>Genuine satisfaction guaranteed</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Navbar -->
    <%- include("../includes/navbar.ejs") %>

    <!-- Listings Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-y-6 gap-x-4 mt-6 max-w-5xl mx-auto px-4 justify-items-center">
        <% for (let listing of allListings) { %>
            <!-- Card Wrapper -->
            <div class="relative w-64 group hover:scale-105 transition-transform duration-300 rounded-lg shadow-lg">

                <!-- Image Container -->
                <div class="relative h-64 w-full overflow-hidden rounded-lg">
                    <img src="<%= listing.icon_url %>" 
                         alt="<%= listing.title %>" 
                         class="w-full h-full object-cover transition duration-300 group-hover:blur-sm">

                    <!-- Title & Description -->
                    <div class="absolute bottom-0 left-0 w-full bg-white bg-opacity-90 px-2 py-1 max-h-12 overflow-hidden">
                        <h3 class="text-gray-900 text-sm font-semibold leading-tight truncate">
                            <%= listing.title %>
                        </h3>
                        <p class="text-gray-700 text-xs truncate">
                            <%= listing.description %>
                        </p>
                    </div>

                    <!-- Hover Button -->
                    <a href="/listings/<%= listing._id %>" 
                       class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
                        <span class="flex items-center gap-2 px-4 py-2 bg-white/90 text-gray-800 rounded-md shadow-md hover:bg-white hover:text-black font-medium tracking-wide">
                            <!-- Eye Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" 
                                 class="h-4 w-4" fill="none" 
                                 viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                      d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                      d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 
                                         8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 
                                         7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            View Details
                        </span>
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</body>

