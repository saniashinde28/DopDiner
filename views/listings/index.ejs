    </div>

    

    <!-- Navbar -->
  <%- include("../includes/navbar.ejs") %>
    






<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-y-6 gap-x-4 mt-6 max-w-5xl mx-auto px-4 justify-items-center">
    <% for (let listing of allListings) { %>
        <!-- Outer wrapper with dashed border and shadow -->
        <div class="relative w-64 group hover:scale-105 transition-transform duration-300 rounded-lg border-2 border-gray-500 border-dashed p-[2px] shadow-lg">
            
            <!-- Inner card -->
            <div class="bg-white rounded-lg overflow-hidden relative">
                
                <!-- Image Container -->
                <div class="relative h-64 w-full">
                    <img src="<%= listing.icon_url %>" 
                         alt="<%= listing.title %>" 
                         class="w-full h-full object-cover transition duration-300 group-hover:blur-sm">

                    <!-- Dark gradient for text readability -->
                    <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent transition duration-300 group-hover:blur-sm"></div>
                    
                    <!-- Title on image -->
                    <h3 class="absolute bottom-3 left-3 text-white text-lg font-semibold drop-shadow-lg transition duration-300 group-hover:blur-sm">
                        <%= listing.title %>
                    </h3>

                    <!-- Hover Button (centered) -->
                    <a href="/listings/<%= listing._id %>" 
                        class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition duration-300">
                        <span class="flex items-center gap-2 px-4 py-2 bg-white/90 text-gray-800 rounded-md shadow-md hover:bg-white/100 hover:text-black font-medium tracking-wide">
                            <!-- Eye Icon -->
                             <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                            </svg>
                            View Details
                        </span>
                    </a>

                </div>
            </div>
        </div>
    <% } %>
</div>


</body>
</html>
